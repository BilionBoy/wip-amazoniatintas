<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar Titulo</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @titulo %>">
          <p>
            <strong>Conteudo Text:</strong>
            <%= @titulo.conteudo_text %>
          </p>
          <p>
            <strong>Data Evento:</strong>
            <%= @titulo.data_evento %>
          </p>
          <p>
            <strong>L Categoria:</strong>
            <%= @titulo.l_categoria %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_titulo_path(@titulo), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", titulos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @titulo, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
