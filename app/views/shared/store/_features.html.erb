<!-- Features Section -->
<section id="features" class="features-section">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
          <div class="feature-icon">
            <i class="fas fa-paint-roller"></i>
          </div>
          <div class="feature-content">
            <h3>Tintas Premium</h3>
            <p>
              Trabalhamos com as melhores marcas do mercado para garantir
              resultados perfeitos.
            </p>
          </div>
          <div class="feature-hover">
            <%= link_to "#produtos", class: "stretched-link" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
          <div class="feature-icon">
            <i class="fas fa-truck"></i>
          </div>
          <div class="feature-content">
            <h3>Entrega Expressa</h3>
            <p>
              Entregamos seus produtos com agilidade e segurança em toda a
              região.
            </p>
          </div>
          <div class="feature-hover">
            <%= link_to "#entrega", class: "stretched-link" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card" data-aos="fade-up" data-aos-delay="300">
          <div class="feature-icon">
            <i class="fas fa-headset"></i>
          </div>
          <div class="feature-content">
            <h3>Consultoria Especializada</h3>
            <p>
              Nossa equipe está pronta para oferecer o melhor atendimento e
              orientação.
            </p>
          </div>
          <div class="feature-hover">
            <%= link_to "#consultoria", class: "stretched-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>