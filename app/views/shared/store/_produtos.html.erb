<!-- Produtos Section -->
<section id="produtos" class="products-section">
  <div class="container">
    <div class="section-header text-center" data-aos="fade-up">
      <span class="section-subtitle">O Que Oferecemos</span>
      <h2 class="section-title">Nossos Produtos</h2>
      <p class="section-description">
        Temos o que há de mais moderno em tintas imobiliárias, tintas
        automotivas, compressores, furadeiras, impermeabilizantes, pincéis e
        muito mais.
      </p>
    </div>
    <div class="product-filter" data-aos="fade-up">
      <ul
        class="nav nav-pills justify-content-center"
        id="products-tab"
        role="tablist"
      >
        <li class="nav-item" role="presentation">
          <button
            class="nav-link active"
            id="imobiliarias-tab"
            data-bs-toggle="pill"
            data-bs-target="#imobiliarias"
            type="button"
            role="tab"
            aria-controls="imobiliarias"
            aria-selected="true"
          >
            <i class="fas fa-home me-2"></i>Tintas Imobiliárias
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="automotivas-tab"
            data-bs-toggle="pill"
            data-bs-target="#automotivas"
            type="button"
            role="tab"
            aria-controls="automotivas"
            aria-selected="false"
          >
            <i class="fas fa-car me-2"></i>Tintas Automotivas
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="industriais-tab"
            data-bs-toggle="pill"
            data-bs-target="#industriais"
            type="button"
            role="tab"
            aria-controls="industriais"
            aria-selected="false"
          >
            <i class="fas fa-industry me-2"></i>Tintas Industriais
          </button>
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link"
            id="acessorios-tab"
            data-bs-toggle="pill"
            data-bs-target="#acessorios"
            type="button"
            role="tab"
            aria-controls="acessorios"
            aria-selected="false"
          >
            <i class="fas fa-tools me-2"></i>Acessórios
          </button>
        </li>
      </ul>
    </div>
