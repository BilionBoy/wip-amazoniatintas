                <div class="product-actions">
                  <%= link_to "#", class: "product-action-btn", data: { bs_toggle: "tooltip" }, title: "Ver Detalhes" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to "#", class: "product-action-btn", data: { bs_toggle: "tooltip" }, title: "Solicitar Orçamento" do %>
                    <i class="fas fa-shopping-cart"></i>
                  <% end %>
                </div>
              </div>
              <div class="product-body">
                <span class="product-category">Premium</span>
                <h3 class="product-title">Tinta Acrílica Premium</h3>
                <div class="product-rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star-half-alt"></i>
                  <span>(4.5)</span>
                </div>
                <p class="product-description">
                  Tinta de alta qualidade para ambientes internos e externos
                  com acabamento perfeito e alta durabilidade.
                </p>
                <div class="product-price">
                  <span>R$ 289,90</span>
                  <span class="discount">-15%</span>
                </div>
                <div class="product-footer">
                  <%= link_to "#", class: "btn btn-outline-primary btn-product-details", style: "color: #00a651" do %>
                    Saiba Mais
                  <% end %>
                </div>
              </div>
            </div>
          </div>
