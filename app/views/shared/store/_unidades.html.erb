<!-- Unidades Section -->
<section id="unidades" class="stores-section">
  <div class="container">
    <div class="section-header text-center" data-aos="fade-up">
      <span class="section-subtitle">Onde Estamos</span>
      <h2 class="section-title">Nossas Unidades</h2>
      <p class="section-description">
        Encontre a loja Amazônia Tintas mais próxima de você
      </p>
    </div>
    <div class="store-locator" data-aos="fade-up">
      <div class="store-map">
        <div id="map-container">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d254497.84881039266!2d-60.07305505!3d-3.044246!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x926c1bc8b37647b7%3A0x2b485c9ff765a9cc!2sManaus%2C%20AM!5e0!3m2!1spt-BR!2sbr!4v1627579643728!5m2!1spt-BR!2sbr"
            width="100%"
            height="450"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"
          ></iframe>
        </div>
      </div>
      <div class="store-finder">
        <h3>Encontre uma loja</h3>
        <div class="store-search">
          <div class="input-group">
            <select class="form-select" id="city-select">
              <option selected>Selecione uma cidade</option>
              <option value="manaus">Manaus</option>
              <option value="belem">Belém</option>
              <option value="porto-velho">Porto Velho</option>
              <option value="boa-vista">Boa Vista</option>
            </select>
            <button class="btn btn-primary" type="button">Buscar</button>
          </div>
        </div>
        <div class="store-list">
          <div class="store-item active">
            <div class="store-info">
              <h4>Unidade Centro - Manaus</h4>
              <p>
                <i class="fas fa-map-marker-alt"></i> Av. Principal, 1234 -
                Centro
              </p>
              <p><i class="fas fa-phone"></i> (92) 3123-4567</p>
              <p>
                <i class="fas fa-clock"></i> Seg a Sex: 8h às 18h | Sáb: 8h
                às 13h
              </p>
            </div>
            <div class="store-actions">
              <%= link_to "#", class: "btn btn-sm btn-outline-primary" do %>
                Ver no Mapa
              <% end %>
              <%= link_to "#", class: "btn btn-sm btn-primary" do %>
                Como Chegar
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
