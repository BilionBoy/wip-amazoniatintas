<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar L Categoria</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @l_categoria %>">
          <p>
            <strong>Nome:</strong>
            <%= @l_categoria.nome %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @l_categoria.descricao %>
          </p>
          <p>
            <strong>L Segmento:</strong>
            <%= @l_categoria.l_segmento %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_l_categoria_path(@l_categoria), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", l_categorias_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @l_categoria, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
