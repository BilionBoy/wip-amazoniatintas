<%= render "shared/context_nav", title: t("activerecord.models.#{LCategoria.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{LCategoria.model_name.i18n_key}.other"), l_categorias_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@l_categoria, url: @l_categoria.new_record? ? l_categorias_path : l_categoria_path(@l_categoria)) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @l_categoria.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{LCategoria.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="row">
        <div class="col-12">
          <%= f.input :nome, input_html: { class: "capitalize"}, placeholder: "Nome"  %>
        </div>
        <div class="col-12">
          <%= f.input :descricao, input_html: { class: "capitalize"}, placeholder: "Descricao"  %>
        </div>
        <div class="col-4">
          <%= f.association :l_segmento,  collection: LSegmento.all,  label_method: :descricao,  value_method: :id,  input_html: { class: "capitalize" },  placeholder: "Segmento" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", l_categorias_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>