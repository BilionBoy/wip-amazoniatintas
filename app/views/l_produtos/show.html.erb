<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar L Produto</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @l_produto %>">
          <p>
            <strong>L Categoria:</strong>
            <%= @l_produto.l_categoria %>
          </p>
          <p>
            <strong>Titulo:</strong>
            <%= @l_produto.titulo %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @l_produto.descricao %>
          </p>
          <p>
            <strong>Preco:</strong>
            <%= @l_produto.preco %>
          </p>
          <p>
            <strong>Quantidade Estoque:</strong>
            <%= @l_produto.quantidade_estoque %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_l_produto_path(@l_produto), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", l_produtos_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @l_produto, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
