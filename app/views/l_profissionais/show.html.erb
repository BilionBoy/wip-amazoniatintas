<div class="container">
  <%= render "shared/notice" %>
  <div class="card border-0 shadow shadow-sm">
    <div class="card-header border-0 d-flex justify-content-between">
      <span class="fs-4">Visualizar L Profissional</span>
    </div>
    <div class="card-body">
      <div id="<%= dom_id @l_profissional %>">
          <p>
            <strong>Nome:</strong>
            <%= @l_profissional.nome %>
          </p>
          <p>
            <strong>Especialidade:</strong>
            <%= @l_profissional.especialidade %>
          </p>
          <p>
            <strong>Descricao:</strong>
            <%= @l_profissional.descricao %>
          </p>
      </div>
    </div>
    <div class="card-footer border-0 d-flex justify-content-between">
      <div>
        <%= link_to edit_l_profissional_path(@l_profissional), class: "btn btn-primary" do %>
        <i class="bi bi-pencil-square"></i> Editar
        <% end %>
        <%= link_to "Voltar", l_profissionais_path, class: "btn btn-secondary" %>
      </div>
      <%= button_to "Deletar", @l_profissional, method: :delete, class: "btn btn-outline-danger border-0" %>
    </div>
  </div>
</div>
